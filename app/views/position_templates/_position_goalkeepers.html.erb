<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Goalkeepers

    <a data-toggle="collapse" href="#position_goalkeepers_new_form">
      Add goalkeeper
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @position.goalkeepers.each do |goalkeeper| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/goalkeepers/<%= goalkeeper.id %>">
          <%= goalkeeper.position_id %>
        </a>

        <a href="/delete_goalkeeper_from_position/<%= goalkeeper.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="position_goalkeepers_new_form">
        <%= render partial: "position_templates/position_goalkeepers_new_form" %>
      </div>
    </div>

  </ul>
</div>
