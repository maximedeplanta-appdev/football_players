<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @positions.each do |position| %>
      <tr>
        <!-- Display position.id start -->
        <td>
          <%= position.id %>
        </td>
        <!-- Display position.id end -->

        <!-- Display position.created_at start -->
        <td>
          <%= time_ago_in_words(position.created_at) %> ago
        </td>
        <!-- Display position.created_at end -->

        <!-- Display position.updated_at start -->
        <td>
          <%= time_ago_in_words(position.updated_at) %> ago
        </td>
        <!-- Display position.updated_at end -->

        <td>
          <a href="/positions/<%= position.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
