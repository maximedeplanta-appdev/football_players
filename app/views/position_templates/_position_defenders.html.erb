<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Defenders

    <a data-toggle="collapse" href="#position_defenders_new_form">
      Add defender
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @position.defenders.each do |defender| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/defenders/<%= defender.id %>">
          <%= defender.position_id %>
        </a>

        <a href="/delete_defender_from_position/<%= defender.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="position_defenders_new_form">
        <%= render partial: "position_templates/position_defenders_new_form" %>
      </div>
    </div>

  </ul>
</div>
