<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Forwards

    <a data-toggle="collapse" href="#position_forwards_new_form">
      Add forward
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @position.forwards.each do |forward| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/forwards/<%= forward.id %>">
          <%= forward.position_id %>
        </a>

        <a href="/delete_forward_from_forward/<%= forward.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="position_forwards_new_form">
        <%= render partial: "position_templates/position_forwards_new_form" %>
      </div>
    </div>

  </ul>
</div>
