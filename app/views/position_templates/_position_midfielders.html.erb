<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Midfielders

    <a data-toggle="collapse" href="#position_midfielders_new_form">
      Add midfielder
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @position.midfielders.each do |midfielder| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/midfielders/<%= midfielder.id %>">
          <%= midfielder.position_id %>
        </a>

        <a href="/delete_midfielder_from_position/<%= midfielder.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="position_midfielders_new_form">
        <%= render partial: "position_templates/position_midfielders_new_form" %>
      </div>
    </div>

  </ul>
</div>
