<!-- Validation failure messages -->
<% if @position.present? %>
  <% if @position.errors.any? %>
    <% @position.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

