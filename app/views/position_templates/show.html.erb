<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Position #<%= @position.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/positions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link position start -->
      <div class="col">
        <a href="/positions/<%= @position.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit position
        </a>
      </div>
      <!-- Edit link position end -->

      <!-- Delete link position start -->
      <div class="col">
        <a href="/delete_position/<%= @position.id %>" class="btn btn-block btn-outline-secondary">
          Delete position
        </a>
      </div>
      <!-- Delete link position end -->
    </div>

    <dl>
      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@position.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@position.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->

<!-- Show Page Customization end -->
