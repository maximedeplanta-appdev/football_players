<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Forward #<%= @forward.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/forwards" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/forwards/<%= @forward.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit forward
        </a>
      </div>

      <div class="col">
        <a href="/delete_forward/<%= @forward.id %>" class="btn btn-block btn-outline-secondary">
          Delete forward
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Position
      </dt>
      <dd>
        <% if @forward.forward.present? %>
          <a href="/positions/<%= @forward.position_id %>">
            <%= @forward.forward.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@forward.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@forward.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

