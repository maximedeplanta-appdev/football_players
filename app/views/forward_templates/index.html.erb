<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All forwards
    </h1>

    <a href="/forwards/new" class="btn btn-block btn-outline-secondary">
      Add a new forward
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Position
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @forwards.each do |forward| %>
      <tr>
        <!-- Display forward.id start -->
        <td>
          <%= forward.id %>
        </td>
        <!-- Display forward.id end -->

        <!-- Display forward.position_id start -->
        <td>
          <%= forward.forward.created_at %>
        </td>
        <!-- Display forward.position_id end -->

        <!-- Display forward.created_at start -->
        <td>
          <%= time_ago_in_words(forward.created_at) %> ago
        </td>
        <!-- Display forward.created_at end -->

        <!-- Display forward.updated_at start -->
        <td>
          <%= time_ago_in_words(forward.updated_at) %> ago
        </td>
        <!-- Display forward.updated_at end -->

        <td>
          <a href="/forwards/<%= forward.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @forwards, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
