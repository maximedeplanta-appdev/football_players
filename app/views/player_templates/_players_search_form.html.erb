<%= search_form_for @q, :class => collapse_search_form, :id => "players_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :nationality_cont, "Nationality contains" %>
    <%= f.text_field :nationality_cont, :class => "form-control", :placeholder => "Nationality contains" %>
  </div>

  <div class="form-group">
    <%= f.label :level, "Level" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :level_gteq, :class => "form-control", :placeholder => "Level greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :level_lteq, :class => "form-control", :placeholder => "Level less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :age, "Age" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :age_gteq, :class => "form-control", :placeholder => "Age greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :age_lteq, :class => "form-control", :placeholder => "Age less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :club_cont, "Club contains" %>
    <%= f.text_field :club_cont, :class => "form-control", :placeholder => "Club contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "Position Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='positiongteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :position_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Position Created at greater than or equal to", :data => {:target => '#positiongteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#positiongteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='positionlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :position_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Position Created at less than or equal to", :data => {:target => '#positionlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#positionlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#positiongteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#positionlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#positiongteqcreated_atPicker').on("dp.change", function (e) {
              $('#positionlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#positionlteqcreated_atPicker').on("dp.change", function (e) {
              $('#positiongteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/players" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#players_filters">
  Show filters
</a>
