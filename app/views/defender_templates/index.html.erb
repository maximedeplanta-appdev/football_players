<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Position
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @defenders.each do |defender| %>
      <tr>
        <!-- Display defender.id start -->
        <td>
          <%= defender.id %>
        </td>
        <!-- Display defender.id end -->

        <!-- Display defender.position_id start -->
        <td>
          <%= defender.position.created_at %>
        </td>
        <!-- Display defender.position_id end -->

        <!-- Display defender.created_at start -->
        <td>
          <%= time_ago_in_words(defender.created_at) %> ago
        </td>
        <!-- Display defender.created_at end -->

        <!-- Display defender.updated_at start -->
        <td>
          <%= time_ago_in_words(defender.updated_at) %> ago
        </td>
        <!-- Display defender.updated_at end -->

        <td>
          <a href="/defenders/<%= defender.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
