<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All defenders
    </h1>

    <a href="/defenders/new" class="btn btn-block btn-outline-secondary">
      Add a new defender
    </a>
  </div>
</div>

<!-- Ransack Code start -->

