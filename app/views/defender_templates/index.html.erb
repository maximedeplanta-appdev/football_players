<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All defenders
    </h1>

    <a href="/defenders/new" class="btn btn-block btn-outline-secondary">
      Add a new defender
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "defender_templates/defenders_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Position
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @defenders.each do |defender| %>
      <tr>
        <td>
          <%= defender.id %>
        </td>

        <td>
          <% if defender.position.present? %>
            <a href="/positions/<%= defender.position.id %>">
              <%= defender.position.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(defender.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(defender.updated_at) %> ago
        </td>

        <td>
          <a href="/defenders/<%= defender.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @defenders, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
