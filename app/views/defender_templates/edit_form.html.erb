<h1>
  Edit defender #<%= @defender.id %>
</h1>

<hr>

<!-- Form defender start -->
<form action="/update_defender/<%= @defender.id %>" method="post">
<!-- Form defender end -->

  <!-- Label and input for position_id start -->
  <div class="form-group">
    <label for="position_id">
      Position
    </label>

    <!-- Input for position_id start -->
    <%= select_tag(:position_id, options_from_collection_for_select(Position.all, :id, :created_at, @defender.position_id), :class => "form-control") %>
    <!-- Input for position_id end -->
  </div>
  <!-- Label and input for position_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update defender
  </button>
</form>

<hr>

<a href="/defenders">
  Go back
</a>
