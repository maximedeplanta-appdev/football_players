<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All midfielders
    </h1>

    <a href="/midfielders/new" class="btn btn-block btn-outline-secondary">
      Add a new midfielder
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "midfielder_templates/midfielders_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Position
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @midfielders.each do |midfielder| %>
      <tr>
        <td>
          <%= midfielder.id %>
        </td>

        <td>
          <% if midfielder.position.present? %>
            <a href="/positions/<%= midfielder.position.id %>">
              <%= midfielder.position.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(midfielder.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(midfielder.updated_at) %> ago
        </td>

        <td>
          <a href="/midfielders/<%= midfielder.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @midfielders, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
