<% if @midfielder.present? %>
  <% if @midfielder.errors.any? %>
    <% @midfielder.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new midfielder
</h1>


<hr>

<form action="/create_midfielder" method="post">

  <div class="form-group">
    <label for="position_id">
      Position
    </label>

    <%= select_tag(:position_id, options_from_collection_for_select(Position.all, :id, :created_at, @midfielder.position_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create midfielder
  </button>
</form>

<hr>

<a href="/midfielders">
  Go back
</a>
