<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Goalkeeper #<%= @goalkeeper.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/goalkeepers" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link goalkeeper start -->
      <div class="col">
        <a href="/goalkeepers/<%= @goalkeeper.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit goalkeeper
        </a>
      </div>
      <!-- Edit link goalkeeper end -->

      <!-- Delete link goalkeeper start -->
      <div class="col">
        <a href="/delete_goalkeeper/<%= @goalkeeper.id %>" class="btn btn-block btn-outline-secondary">
          Delete goalkeeper
        </a>
      </div>
      <!-- Delete link goalkeeper end -->
    </div>

    <dl>
      <dt>
        Position
      </dt>
      <!-- Display position_id start -->
      <dd>
        <% if @goalkeeper.position.present? %>
          <a href="/positions/<%= @goalkeeper.position_id %>">
            <%= @goalkeeper.position.created_at %>
          </a>
        <% end %>
      </dd>
      <!-- Display position_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@goalkeeper.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@goalkeeper.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

