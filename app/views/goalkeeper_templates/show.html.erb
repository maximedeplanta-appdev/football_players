<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Goalkeeper #<%= @goalkeeper.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/goalkeepers" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/goalkeepers/<%= @goalkeeper.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit goalkeeper
        </a>
      </div>

      <div class="col">
        <a href="/delete_goalkeeper/<%= @goalkeeper.id %>" class="btn btn-block btn-outline-secondary">
          Delete goalkeeper
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Position
      </dt>
      <dd>
        <% if @goalkeeper.position.present? %>
          <a href="/positions/<%= @goalkeeper.position_id %>">
            <%= @goalkeeper.position.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@goalkeeper.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@goalkeeper.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

