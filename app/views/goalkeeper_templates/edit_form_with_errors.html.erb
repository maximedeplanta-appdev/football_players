<% if @goalkeeper.errors.any? %>
  <% @goalkeeper.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit goalkeeper #<%= @goalkeeper.id %>
</h1>

<hr>

<form action="/update_goalkeeper/<%= @goalkeeper.id %>" method="post">

  <div class="form-group">
    <label for="position_id">
      Position
    </label>

    <%= select_tag(:position_id, options_from_collection_for_select(Position.all, :id, :created_at, @goalkeeper.position_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update goalkeeper
  </button>
</form>

<hr>

<a href="/goalkeepers">
  Go back
</a>
