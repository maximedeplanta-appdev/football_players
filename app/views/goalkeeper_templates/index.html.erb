<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All goalkeepers
    </h1>

    <a href="/goalkeepers/new" class="btn btn-block btn-outline-secondary">
      Add a new goalkeeper
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "goalkeeper_templates/goalkeepers_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Position
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @goalkeepers.each do |goalkeeper| %>
      <tr>
        <td>
          <%= goalkeeper.id %>
        </td>

        <td>
          <% if goalkeeper.position.present? %>
            <a href="/positions/<%= goalkeeper.position.id %>">
              <%= goalkeeper.position.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(goalkeeper.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(goalkeeper.updated_at) %> ago
        </td>

        <td>
          <a href="/goalkeepers/<%= goalkeeper.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @goalkeepers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
