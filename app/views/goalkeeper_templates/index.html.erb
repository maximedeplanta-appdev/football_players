<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All goalkeepers
    </h1>

    <a href="/goalkeepers/new" class="btn btn-block btn-outline-secondary">
      Add a new goalkeeper
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Position
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @goalkeepers.each do |goalkeeper| %>
      <tr>
        <!-- Display goalkeeper.id start -->
        <td>
          <%= goalkeeper.id %>
        </td>
        <!-- Display goalkeeper.id end -->

        <!-- Display goalkeeper.position_id start -->
        <td>
          <% if goalkeeper.position.present? %>
            <a href="/positions/<%= goalkeeper.position.id %>">
              <%= goalkeeper.position.created_at %>
            </a>
          <% end %>
        </td>
        <!-- Display goalkeeper.position_id end -->

        <!-- Display goalkeeper.created_at start -->
        <td>
          <%= time_ago_in_words(goalkeeper.created_at) %> ago
        </td>
        <!-- Display goalkeeper.created_at end -->

        <!-- Display goalkeeper.updated_at start -->
        <td>
          <%= time_ago_in_words(goalkeeper.updated_at) %> ago
        </td>
        <!-- Display goalkeeper.updated_at end -->

        <td>
          <a href="/goalkeepers/<%= goalkeeper.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @goalkeepers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
